.page {
  display: flex;
  flex-direction: column;
}
.page .headerBackground {
  width: 100%;
  box-sizing: border-box;
  height: 494rpx;
  background: url("../../assets/头部背景.ac35a75f.png");
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
}
.page .headerBackground .fill_box {
  height: 150rpx;
  width: 100%;
}
.page .headerBackground .swiperArea {
  box-sizing: border-box;
  width: 100%;
  flex: 1;
  padding: 0 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.page .headerBackground .swiperArea swiper {
  height: calc(100% - 30rpx);
  margin-bottom: auto;
  border-radius: 20rpx 20rpx 0 0;
  background-color: #fff;
}
.page .mainMenu {
  margin-top: -30rpx;
  box-sizing: border-box;
  height: 650rpx;
  width: 100%;
  background: pink;
  background: linear-gradient(to bottom, #ffffff 380rpx, #f5f5ff);
  border-radius: 40rpx 40rpx 0 0;
  padding: 0 28rpx;
  padding-top: 28rpx;
  display: flex;
  flex-direction: column;
}
.page .mainMenu .cardArea {
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.page .mainMenu .cardArea .projectCard {
  box-sizing: border-box;
  width: 326rpx;
  height: 326rpx;
  background-color: pink;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.page .mainMenu .cardArea .projectCard .project_title {
  background: linear-gradient(-45deg, #5f70ff, #6e61fe);
  height: 132rpx;
  display: flex;
  flex-direction: column;
  font-weight: 500;
  font-size: 30rpx;
  color: #fff;
}
.page .mainMenu .cardArea .projectCard .project_title .title_top {
  margin: auto 0;
  margin-left: 26rpx;
}
.page .mainMenu .cardArea .projectCard .project_title .title_top .arrow {
  display: flex;
  align-items: center;
}
.page .mainMenu .cardArea .projectCard .project_title .title_top .arrow img {
  margin-left: 16rpx;
}
.page .mainMenu .cardArea .projectCard .project_title .title_top span {
  font-size: 12px;
  font-weight: 300;
  color: #fff;
}
.page .mainMenu .cardArea .projectCard .goingProjects {
  flex: 1;
  background: linear-gradient(to bottom, #7d6ffe, #9c4efc);
  box-shadow: 10rpx 10rpx 10rpx #7d6ffe;
}
.page .mainMenu .cardArea .projectCard .goingProjects .detail_projects {
  height: 72rpx;
  background-color: transparent;
  overflow: hidden;
  display: flex;
}
.page .mainMenu .cardArea .projectCard .goingProjects .detail_projects .scroll-view_H .uni-scroll-view-content {
  display: flex;
}
.page .mainMenu .cardArea .projectCard .goingProjects .detail_projects .scroll-view_H .detail_pro {
  margin-right: 20rpx;
  height: 100%;
  aspect-ratio: 1;
  background-color: #e4e7ff;
  border-radius: 10rpx;
}
.page .mainMenu .cardArea .otherCard {
  display: flex;
  flex-direction: column;
  width: 348rpx;
  height: 326rpx;
  justify-content: space-between;
}
.page .mainMenu .cardArea .otherCard .agentCard {
  width: 100%;
  height: 144rpx;
  background: linear-gradient(to bottom, #b1cbff, #fbfcff);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.page .mainMenu .cardArea .otherCard .agentCard .agentText > span {
  font-size: 22rpx;
}
.page .mainMenu .cardArea .otherCard .AIandkeyWordCard {
  display: flex;
  justify-content: space-between;
}
.page .mainMenu .cardArea .otherCard .AIandkeyWordCard .AICard {
  width: 166rpx;
  height: 166rpx;
  background-color: orange;
  border-radius: 24rpx;
}
.page .mainMenu .cardArea .otherCard .AIandkeyWordCard .keyWordCard {
  width: 166rpx;
  height: 166rpx;
  background-color: orange;
  border-radius: 24rpx;
}
.page .mainMenu .lineCard {
  height: 100rpx;
  width: 100%;
  background-color: transparent;
  border-radius: 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}
.page .mainMenu .lineCard .line_item {
  height: 100%;
  width: 220rpx;
  border-radius: 20rpx;
  background-color: #5f70ff;
}
.page .mainMenu .lineCard .line_item:first-child {
  background: linear-gradient(45deg, #fffffe, #ffeee1);
}
.page .mainMenu .lineCard .line_item:nth-child(2) {
  background: linear-gradient(45deg, #fffffe, #f1fdff);
}
.page .mainMenu .lineCard .line_item:nth-child(3) {
  background: linear-gradient(45deg, #fffffe, #ede5ff);
}
.page .mainMenu .latestNews {
  margin-top: 20rpx;
  height: 118rpx;
  border-radius: 20rpx;
  background: linear-gradient(to right, #f6f9ff, #bfd2ff);
  display: flex;
  align-items: center;
}
.page .mainMenu .latestNews .latestNews_text {
  font-family: YouSheBiaoTiHei, YouSheBiaoTiHei;
  height: 94%;
  width: 80rpx;
  font-size: 36rpx;
}
.page .mainMenu .latestNews .news_detail {
  height: 85%;
  width: 556rpx;
  border-radius: 10rpx;
  background-color: #f4f7ff;
  margin-left: 40rpx;
}